@model IEnumerable<AdoptMe1.Models.Animal>

@{
    ViewBag.Title = "Pet Store - Admin";
}
<div>
    <partial name="SelectBoxPartial" />
    <a class="myBtn" asp-controller="Admin" asp-action="CreateAnimal" style="margin-left:10px;">Add New Animal</a>
</div>
<br/>
<div class="container d-flex flex-wrap">
    @foreach (var animal in Model)
    {
        <div class="card-Block col-4">
            <div class="card" style="width: 18rem; background-color: brown; color:white; margin-bottom:30px">
                <img src="@animal.ImageString" class="card-img-top" alt="@animal.Name" asp-append-version="true" />
                <div class="card-body" style=background-color: brown; color:white;">
                    <ul class="list-group list-group-flus-rounded">
                        <li class="list-group-item">Name: @animal.Name</li>
                        <li class="list-group-item">Type: @animal.Type</li>
                        <li class="list-group-item">Age: @animal.Age</li>
                        <li class="list-group-item">Description: @animal.Description</li>
                    </ul>
                </div>

                <div class="btns">
                    <a class="myBtn" asp-controller="Admin" asp-action="EditPage" asp-route-Id="@animal.AnimalId">Edit</a>
                    <a class="myBtn" asp-controller="Admin" asp-action="DeleteAnimal" asp-route-name="@animal.Name">Delete</a>
                </div>
            </div>
        </div>
    }
</div>


